<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro"  name="robot">

    <material name="grey">
        <color rgba="0.2 0.2 0.2 1"/>
    </material>

    <material name="white">
        <color rgba="1 1 1 1"/>
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1"/>
    </material>

    <material name="blue">
        <color rgba="0 0 1 1"/>
    </material>


    <link name="world"></link>

    <joint name="world_to_base" type="fixed">
        <parent link="world" />
        <child link="base" />
        <origin  rpy="1.57 0 0" xyz="0 0 0" />
    </joint>

    <link name="base">
        <visual>
            <origin xyz="0 1 0" rpy="0 0 0"/>
            <geometry>
                <box size="0.13 0.07 0.13" />
            </geometry>
            <material name="grey" />
        </visual>
    </link>


    <joint name="base_to_l3" type="revolute">
        <parent link="base" />
        <child link="l3" />
        <origin  rpy="0 0 0" xyz="0 0.07 0" />
        <axis rpy="0 0 0" xyz="0 1 0" />
        <!-- changed axis to rotate around -->
        <limit effort="0.1" lower="-3.1" upper="3.1" velocity="0.2"/>
    </joint>


    <link name="l3">
        <visual>
            <origin xyz="0.005 0 0" rpy="0 1.57 0"/>
            <geometry>
                <cylinder length="0.01" radius="0.01" />
            </geometry>
            <material name="orange" />
        </visual>
    </link>

    <joint name="l3_to_l2" type="revolute">
        <parent link="l3" />
        <child link="l2" />
        <!-- <origin xyz="1 0 0" /> -->
        <origin rpy="0 0 0" xyz="0.5 0 0" />
        <axis rpy="0 0 0" xyz="0 0 1" />
        <limit effort="0.1" lower="-3.1" upper="3.1" velocity="0.2"/>
    </joint>


    <link name="l2">
        <visual>
            <origin xyz="0.75 0 0" rpy="0 1.57 0"/>
            <geometry>
                
                <cylinder length="1.5" radius="0.04" />
            </geometry>
            <material name="orange" />
        </visual>
    </link>

    <joint name="l2_to_l1" type="revolute">
        <parent link="l2" />
        <child link="l1" />
        <origin rpy="0 0 0" xyz="1.5 0 0" />
        <axis rpy="0 0 0" xyz="0 0 1" />
        <limit effort="0.1" lower="-3.1" upper="3.1" velocity="0.2"/>
    </joint>


    <link name="l1">
        <visual>
            <origin xyz="0.5 0 0" rpy="0 1.57 0"/>
            <geometry>
                
                <cylinder length="1" radius="0.04" />
            </geometry>
            <material name="orange" />
        </visual>
    </link>

    <joint name="l1_to_l0" type="revolute">
        <parent link="l1" />
        <child link="l0" />
        <origin rpy="0 0 0" xyz="1 0 0" />
        <axis rpy="0 0 0" xyz="0 0 1" />
        <limit effort="0.1" lower="-3.1" upper="3.1" velocity="0.2"/>
    </joint>


    <!-- add in l0 to bring into line wiht my robot -->

    <link name="l0">
        <visual>
            <origin xyz="0.5 0 0" rpy="0 1.57 0"/>
            <geometry>
                
                <cylinder length="1" radius="0.04" />
            </geometry>
            <material name="orange" />
        </visual>
    </link>


    <joint name="l0_to_grip" type="revolute">
        <parent link="l0" />
        <child link="grip" />
        <origin rpy="0 0 0" xyz="1 0 0" />
        <axis rpy="0 0 0" xyz="1 0 0" />
        <!-- change axise -->
        <limit effort="0.1" lower="-3.1" upper="3.1" velocity="0.2"/>
    </joint>


    <link name="grip">
        <visual>
            <origin xyz="0.05 0 0"/>
            <geometry>
                <box size="0.05 0.5 0.8" />
            </geometry>
            <material name="white" />
        </visual>
    </link>


    <joint name="grip_to_claw" type="prismatic">
        <parent link="grip" />
        <child link="claw" />
        <origin rpy="0 0 0" xyz="0.05 0 0.025" />
        <axis rpy="0 0 0" xyz="0 0 1" />
        <!-- change axise -->
        <limit effort="0.1" lower="-0.0" upper="0.35" velocity="0.2"/>
    </joint>


    <link name="claw">
        <visual>
            <origin xyz="0.2 0 0"/>
            <geometry>
                <box size="0.4 0.25 0.05" />
            </geometry>
            <material name="white" />
        </visual>
    </link>

    <joint name="grip_to_claw2" type="prismatic">
        <parent link="grip" />
        <child link="claw2" />
        <origin rpy="0 0 0" xyz="0.05 0 -0.025" />
        <axis rpy="0 0 0" xyz="0 0 1" />
        <!-- change axise -->
        <limit effort="0.1" lower="-0.35" upper="0.0" velocity="0.2"/>
    </joint>


    <link name="claw2">
        <visual>
            <origin xyz="0.2 0 0"/>
            <geometry>
                <box size="0.4 0.25 0.05" />
            </geometry>
            <material name="white" />
        </visual>
    </link>
   

</robot>

